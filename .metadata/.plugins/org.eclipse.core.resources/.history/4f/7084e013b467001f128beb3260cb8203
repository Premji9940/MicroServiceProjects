package com.nt;

public class DiamondPattern {

	public static void main(String[] args) {
		for(int rows=1;rows<=n;rows++) {			
			for(int cols=1;cols<=2*n-1;cols++) {
				if(cols>n-rows && cols< 2*n-n+rows) {
					System.out.print(" ");
					
				}else {
					System.out.print("*");
				}
				
			}
			System.out.println();

		}

	}

}
