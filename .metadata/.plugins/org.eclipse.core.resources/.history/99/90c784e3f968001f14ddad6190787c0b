spring.application.name=ConfigServerWithExternalConfigurationFile
server.port=8888
#To Congigure external application.properties file in config server application
#here we are linking git file to config server
spring.cloud.config.server.git.uri=https://github.com/Premji9940/ConfigFileForConfigServer.git

# to know the status of application  using health actuators
management.endpoints.web.exposure.include= health
management.endpoint.health.enabled=true
management.endpoint.health.show-details=always
